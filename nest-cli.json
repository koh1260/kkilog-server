{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  
  "compilerOptions": {
    "assets": [
      {
        "include": "../prisma/migrations",
        "outDir": "./dist/prisma"
      },
      {
        "include": "../prisma/schema.prisma",
        "outDir": "./dist/prisma"
      },
      {
        "include": "./config/env/*.env",
        "outDir": "./dist/src"
      }
    ]
  }
}
